{
    "name": "my-project",
    "jest": {
        "verbose": true,
        "roots": ["src, test"]
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": ["src/*.js", "src/**/*.js"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "clearMocks": true,
    "resetMocks": true,
    "resetModules": true
}